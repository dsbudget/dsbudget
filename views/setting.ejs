<script>
var dsApp = angular.module('dsApp', ['ui.bootstrap']);

dsApp.controller('SettingCtrl', ['$scope', '$http', function($scope, $http) {
    /*
    $http.get('/setting/account').success(function(docs) {
        $scope.account = account;
    });
    */
    $scope.settings = {
        email: "<%-req.user.email%>",
        name: "<%-req.user.name%>"
    };
    $scope.submit = function() {
        $http.post('/setting', $scope.settings).success(function(){
            alert('Successfully Updated!');
        }).error(function(data, status, headers, config) {
            alert('Oops.. Something went wrong! Please refer to dsBudget support forum.');
        });
    };
}]);
</script>

<div class="container" ng-app="dsApp" ng-controller="SettingCtrl" ng-submit="submit()">
    <form role="form">
      <div class="form-group">
        <label for="InputName">Full Name</label>
        <input type="name" class="form-control" id="InputName" ng-model="settings.name" placeholder="Enter your full name">
      </div>
      <div class="form-group">
        <label for="InputEmail1">Email address</label>
        <input type="email" class="form-control" id="InputEmail1" ng-model="settings.email" placeholder="Enter you email">
