<% include head.ejs %>
<% include navbar.ejs %>
<script src="/public/index.js"></script>
<div class="container">
    <div class="page-header">
        <h1>Register</h1>
    </div>
    <p>Looks like this is your first time using dsBudget! Please specify a password so you can login with your email and password.</p>
    <form action="/setpass" method="post">
        <div>
            <label>email:</label>
            <input type="text" name="email" value="<%=req.user.email%>"/>
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password"/>
        </div>
        <div>
            <label>Password (confirm):</label>
            <input type="password" name="password_confirm"/>
        </div>
        <div>
            <label>Full Name:</label>
            <input type="fullname" name="name" value="<%=req.user.name%>"/>
        </div>
        <div>
            <input type="submit" value="Register"/>
        </div>
    </form>
    <% include footer.ejs %>
</div>
<% include tail.ejs %>
